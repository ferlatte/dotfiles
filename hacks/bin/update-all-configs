#! /bin/bash

set -eu -o pipefail

# Basically, run a bunch of git pulls.

pushd ~/dotfiles > /dev/null
git pull
stow [a-z]*
popd

pushd ~/.bash_it > /dev/null
git pull
popd

brew update
brew upgrade
brew cleanup

# EMACS Prelude does it's own git update, followed by a ton of stuff
e --eval '(prelude-update)'
