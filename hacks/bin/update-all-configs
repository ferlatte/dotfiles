#! /usr/bin/env bash

set -eu -o pipefail

function inpath {
    command -v "$1" > /dev/null
}

pushd ~/.dotfiles > /dev/null
git pull
stow [a-z]*
popd > /dev/null

if inpath macos-set-defaults; then
    macos-set-defaults
fi

bash_it="${BASH_IT:-}"
if [ -n "$bash_it" ]; then
    bash-it-configure
fi

if inpath brew; then
    brewup
fi

if inpath pyenv; then
    pyenv rehash
fi

if inpath vagrant; then
    vagrant plugin update
fi

emacsup

if inpath softwareupdate; then
    softwareupdate --list
fi
