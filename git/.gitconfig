[user]
	name = Mark Ferlatte
	email = mark@truss.works
	signingkey = key::ecdsa-sha2-nistp256 AAAAE2VjZHNhLXNoYTItbmlzdHAyNTYAAAAIbmlzdHAyNTYAAABBBDpj84JrT3TshGMfjt1kJ1nBIopWXZFoZ3Yji/FCcox5uoqkrDg+NjYGu2wj+jlXEkoBHYBvbTShohGtGTeXnEc=
[push]
	default = simple
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
[diff]
	algorithm = patience
[fetch]
	prune = true
[transfer]
	fsckObjects = true
[alias]
	# remove files from index (tracking)
	unstage = reset HEAD
	# go back before last commit, with files in uncommitted state
	uncommit = reset --soft HEAD^
	praise = blame

[rebase]
	autoStash = true
[commit]
	gpgsign = true
[gpg]
	format = ssh
[tag]
	forceSignAnnotated = true
[pull]
	rebase = false
[init]
	defaultBranch = main
