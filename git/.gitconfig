[user]
	name = Mark Ferlatte
	email = mark@truss.works
	signingkey = E049969483F8E5B3
[push]
	default = simple
[color]
	ui = true
[core]
	fsyncObjectFiles = true
	excludesfile = ~/.gitignore
[diff]
	algorithm = patience
[fetch]
	prune = true
[transfer]
	fsckObjects = true
[alias]
	# remove files from index (tracking)
	unstage = reset HEAD
	# go back before last commit, with files in uncommitted state
	uncommit = reset --soft HEAD^
	praise = blame

[rebase]
	autoStash = true
[commit]
	gpgSign = true
[gpg]
	program = /usr/local/bin/krgpg
[tag]
	forceSignAnnotated = true
