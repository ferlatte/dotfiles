# This is inspired by
# https://stribika.github.io/2015/01/04/secure-secure-shell.html
# However, Mac OS X 10.10 ships with OpenSSH 6.2p2 which doesn't
# support all of the algorithms recommended.
Host github.com
     KexAlgorithms diffie-hellman-group-exchange-sha256,diffie-hellman-group-exchange-sha1,diffie-hellman-group14-sha1
    
Host *
     # This is a problem if you ssh to hosts you don't control.
     ForwardAgent yes
     # Ensure KnownHosts are unreadable if leaked - it is otherwise easier to
     # know which hosts your keys have access to.
     HashKnownHosts yes
     # Only enable "known safe" algorithms.
     KexAlgorithms diffie-hellman-group-exchange-sha256
     PasswordAuthentication no
     ChallengeResponseAuthentication no
     PubkeyAuthentication yes
     HostKeyAlgorithms ssh-rsa-cert-v01@openssh.com,ssh-rsa
     Ciphers aes256-ctr,aes192-ctr,aes128-ctr
     MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com
