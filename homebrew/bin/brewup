#! /usr/bin/env bash

set -eu -o pipefail

# Reset PATH because pyenv and friends confuse brew.
export PATH=$HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin

pushd "${HOME}" > /dev/null
brew doctor
brew update
brew bundle check
brew bundle install # This also upgrades now.
brew bundle cleanup --force
brew cleanup
popd > /dev/null
