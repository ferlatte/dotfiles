#! /bin/bash

set -eu -o pipefail

e=emacsclient

if [[ -x /Applications/Aquamacs.app/Contents/MacOS/bin/emacsclient ]]; then
    e=/Applications/Aquamacs.app/Contents/MacOS/bin/emacsclient
fi


# Use TERM_SESSION_ID as a hint that we're in an Aqua environment
# This absurd construct is the best way to determine if a shell variable
# is bound or not.
if [[ ! -z "${TERM_SESSION_ID-}" ]]; then
    emacsclient_args=--create-frame
else
    emacsclient_args=--tty
fi

exec $e $emacsclient_args "$@"
